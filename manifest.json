{
  "name": "Copy Password",
  "description": "With this extension, you can copy password like **** to pasteboard.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Copy Password",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],
  "icons": {
    "16": "/images/icon-16.png",
    "32": "/images/icon-32.png",
    "48": "/images/icon-48.png",
    "128": "/images/icon-128.png"
  }
}
